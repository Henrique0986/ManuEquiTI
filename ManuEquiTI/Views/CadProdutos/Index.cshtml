@model IEnumerable<ManuEquiTI.Models.CadProdutos>

@{
    ViewData["Title"] = "Produtos";
}

<h1>Produtos</h1>

<p>
    <a asp-action="Create">Criar um novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Produto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observacoes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Produto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Observacoes)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idProd">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.idProd">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.idProd">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
